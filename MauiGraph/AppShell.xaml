<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiGraph.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiGraph"
    Shell.FlyoutBehavior="Flyout"
    Title="Shell Flyout Page">

    <ShellContent
        Title="PointerMover"
        ContentTemplate="{DataTemplate local:PointerMover}"
        Route="PointerMover" />
    <ShellContent
        Title="RadioButtonTest"
        ContentTemplate="{DataTemplate local:RadioButtonTest}"
        Route="RadioButtonTest" />
    <ShellContent
        Title="MyShapes"
        ContentTemplate="{DataTemplate local:MyShapes}"
        Route="MyShapes" />
    <ShellContent
        Title="GraphicsTest"
        ContentTemplate="{DataTemplate local:GraphicsTest}"
        Route="GraphicsTest" />
    <ShellContent
        Title="MainPage"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
