<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:draw="clr-namespace:MauiGraph"
             x:Class="MauiGraph.GraphicsTest"
             Title="GraphicsTest">
    <ContentPage.Resources>
        <ResourceDictionary>
            <draw:GraphTest x:Key="MyGraph" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <GraphicsView WidthRequest="1600" Drawable="{StaticResource MyGraph}" />
</ContentPage>