<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="fuchsia"
             x:Class="MauiGraph.MyCircleShape"
             Title="MyCircleShape">
    
    
    <VerticalStackLayout>
        <Grid Width="600" Height="600">
            <Path Stroke="Red" StrokeThickness="2">
                <Path.Data>
                    <PathGeometry>
                        <PathFigure StartPoint="300,450">
                            <PathFigure.Segments>
                                <PathSegmentCollection>
                                    <BezierSegment Point1="210,300" Point2="120,420" Point3="300,570"/>
                                    <BezierSegment Point1="480,420" Point2="390,300" Point3="300,450"/>
                                    <LineSegment Point="300,450"/>
                                </PathSegmentCollection>
                            </PathFigure.Segments>
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
            </Path>
        </Grid>


    </VerticalStackLayout>
</ContentPage>